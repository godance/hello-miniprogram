.userinfo {
  margin-top: 0rpx;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 50rpx;
  color: #007aff;
  background-color: white;
}

.menulist {
  align-items: center;
  display: flex;
  flex-direction: row;
  height: 80rpx;
}

.menulist-button {
  height: 100%;
}

